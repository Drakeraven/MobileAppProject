<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Base application theme. -->
    <style name="hangryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hangryRed</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/hangryRed</item>
        <item name="android:windowBackground">@color/just</item>
        <item name="colorButtonNormal">@color/hangryTeal</item>
        <item name="android:textColor">@color/hangryGrey</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="actionMenuTextColor">#000000</item>


    </style>


</resources>
