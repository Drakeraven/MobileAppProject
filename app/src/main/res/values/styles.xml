<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/please</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Base application theme. -->
    <style name="hangryTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hangryOrange</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/hangryRed</item>
        <item name="android:windowBackground">@color/just</item>
        <item name="colorButtonNormal">@color/hangryTeal</item>
        <item name="android:windowActionBar">@color/please</item>

    </style>



</resources>
