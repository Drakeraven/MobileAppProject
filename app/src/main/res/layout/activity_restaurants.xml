<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container_restaurants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hangryPeach"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uw.tacoma.group2.mobileappproject.RestaurantsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_instructions"
        android:text="@string/swipe_instructions"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/hangryGrey"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_rests">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_restaurants">
        </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>